<?xml version="1.0" encoding="UTF-8"?>
<ViewCell
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="amanda.client.Views.Cells.MenuOptionCell"
>
	<ViewCell.View>
		<Frame
			CornerRadius="0"
			Padding="0"
			BackgroundColor="Black"
		>
			<Frame.Resources>
				<ResourceDictionary>
					<Color x:Key="BackgroundColor">Black</Color>
					<Color x:Key="TextColor">White</Color>
					<OnPlatform x:Key="FontFamily" x:TypeArguments="x:String" iOS="MarkerFelt-Thin" Android="sans-serif-monospace" WinPhone="Segoe UI"/>
					<OnPlatform x:Key="FontSize" x:TypeArguments="x:Double" iOS="12" Android="12" WinPhone="24"/>
				</ResourceDictionary>
			</Frame.Resources>
			<Frame.Content>
				<Label
					x:Name="lblOptionText"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					Text="Option"
					
					HorizontalTextAlignment="Start"
					VerticalTextAlignment="Center"
					Margin="20, 0, 0, 0"
					BackgroundColor="{StaticResource BackgroundColor}"
					TextColor="{StaticResource TextColor}"
					FontFamily="{StaticResource FontFamily}"
					FontSize="{StaticResource FontSize}"
				/>
			</Frame.Content>
		</Frame>
	</ViewCell.View>
</ViewCell>
